<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
	<display-name>Kids Academy</display-name>
	<description>Educational platform targeted at children of all ages.</description>
	<context-param>
		<param-name>PROJECT_DIR</param-name>
		<param-value>D:/docs/workspaces/kids-cademy/www/site</param-value>
	</context-param>
	<context-param>
		<param-name>PREVIEW_CALLBACK</param-name>
		<param-value>com.kidscademy.WoodPreviewCallback</param-value>
	</context-param>

	<filter>
		<filter-name>expires</filter-name>
		<filter-class>org.apache.catalina.filters.ExpiresFilter</filter-class>
		<init-param>
			<param-name>ExpiresByType image</param-name>
			<param-value>access plus 0 seconds</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>expires</filter-name>
		<url-pattern>*.png</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>

	<listener>
		<listener-class>js.servlet.TinyContainer</listener-class>
	</listener>

	<servlet>
		<servlet-name>preview</servlet-name>
		<servlet-class>js.wood.PreviewServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>preview</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
</web-app>