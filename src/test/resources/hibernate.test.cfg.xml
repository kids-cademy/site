<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "classpath://org/hibernate/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<property name="connection.url">jdbc:mysql://localhost:3306/</property>
		<property name="default_schema">kids_cademy_test</property>
		<property name="connection.username">kids_cademy</property>
		<property name="connection.password">kids_cademy</property>
		<property name="show_sql">true</property>

		<mapping resource="dao/atlas-object.hbm.xml" />
		<mapping resource="dao/instrument.hbm.xml" />
		<mapping resource="dao/bird.hbm.xml" />
		<mapping resource="dao/link.hbm.xml" />

		<mapping resource="dao/app.hbm.xml" />
		<mapping resource="dao/audit.hbm.xml" />
		<mapping resource="dao/model.hbm.xml" />
		<mapping resource="dao/device.hbm.xml" />
		<mapping resource="dao/no-ads-survey.hbm.xml" />
		<mapping resource="dao/suggestion.hbm.xml" />
		<mapping resource="dao/crash-report.hbm.xml" />

	</session-factory>
</hibernate-configuration>